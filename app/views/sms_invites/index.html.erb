<div style='width: 600px;'>
  <div style='font-size: 80px;'>Invitations</div>
  <% invitations.each do |invitation| %>
    <div style='margin: 80px 0px;'>
      <div>
        <a style='font-size: 80px;' id='sms-link' href='<%= invite_url(invitation.code) %>'>
          <%= invitation.service_groups.present? ? invitation.service_groups_to_add.map(&:name).to_sentence : 'No groups' %>
        </a>
      </div>
    </div>
  <% end %>
</div>
